.article-item-2 {
  overflow hidden
  color white
  border-radius rem(68)
  p {
    margin 0
  }

  &__inner {
    display block
    color inherit
    text-decoration none
    padding rem(30)
    border-radius rem(68)
    background $green-1
    &:before {
      display none
    }
    &:hover, &:focus {
      color inherit
      text-decoration none
      background darken($green-1, 15%)
    }
  }

  &__img-wrap {
    overflow hidden
    width rem(104)
    height rem(104)
    border-radius rem(52)
    margin 0 auto
  }

  &__img {
    display block
  }

  &__title {
    color inherit
    font-size rem(21)
    font-weight rem(500)
    line-height 1.25em
    margin 0 0 0.2em
  }

  &__content {
    flex 1 1 auto
    overflow hidden
  }

  @media (min-width $screen-sm-min) {
    &__inner {
      display flex
      align-items center
      padding rem(16)
      position relative
      &:before {
        display flex
        justify-content center
        align-items center
        flex none
        order 1
        font-size rem(16)
        line-height 1em
        width rem(62)
        height rem(62)
        padding-left 3px
        border-radius 50%
        background #23a74b
        transition inherit
        margin 0 rem(24) 0 rem(80)
      }
      &:hover, &:focus {
        &:before {
          background darken(#23a74b, 15%)
        }
      }
    }

    &__img-wrap {
      flex none
      margin-right rem(25)
    }
  }
}