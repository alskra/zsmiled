.article-view
  p
    margin-bottom (24/13)em

  .container-fluid
    position relative

  &__header
    display table
    table-layout fixed
    width 100%
    height 425px
    position relative
    margin-bottom 20px

  &__header-inner
    display table-cell
    vertical-align middle
    padding-top 85px
    padding-bottom 20px

  &__img
    position absolute
    top 0
    left 0

  &__title
    font-weight 600
    font-size 49px
    text-align center
    text-shadow 1px 1.7px 2px rgba(42, 42, 42, 0.75)
    color white

  &__content
    color #525252
    font-size 13px
    line-height (24/13)em
    max-width 545px
    padding 30px 0
    margin 0 auto

  &__info
    color #171717
    font-family Roboto
    font-size 10px
    font-weight 400
    line-height (18/10)em
    text-transform uppercase
    margin-bottom 18px

  &__info-item
    margin-right 28px

  &__footer
    padding 10px 0 0