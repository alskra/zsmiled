.blockquote
  margin ($line-height-base)em*3 0

  &__col
    &_1
      overflow hidden
      width rem(250)
      height rem(250)
      border-radius 50%
      margin 0 auto ($line-height-base)em

    &_2
      overflow hidden
      padding 0 0 0 rem(40)
      border 0
      position relative
      margin 0
      &:before
        font-weight bold
        font-size rem(65)
        font-family Georgia, "Century Schoolbook L", serif
        line-height 1em
        position absolute
        top -0.035em
        left 0
        content "\201C"
        color $red-1

  &__img
    width 100%
    height 100%

  &__author
    font-size rem(15)
    text-align right

  @media (min-width $screen-sm-min)
    display flex
    align-items flex-start

    &__col
      &_1
        flex 0 0 rem(250)
        margin 0 $grid-gutter-width 0 0

      &_2
        flex 1 1 auto
        padding-left rem(60)
        &:before
          font-size rem(100)
          top -0.06em