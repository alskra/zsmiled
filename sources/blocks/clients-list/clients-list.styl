.clients-list
  display flex
  flex-flow row wrap
  margin 0 rem(-15px)

  &__item
    width uq('calc(100%/2 - ' + rem(30) + ')')
    position relative
    margin 0 rem(15) rem(15)
    &:before
      content ''
      display block
      padding-top percentage(115/155)
    &:empty
      &:after
        content '450x334'
        font-size rem(20)
        display flex
        justify-content center
        align-items center
        background #CCCCCC
        position absolute
        top 0
        right 0
        bottom 0
        left 0

  &__img
    position absolute
    top 0
    left 0

  @media (min-width em-root(480))
    &__item
      width uq('calc(100%/3 - ' + rem(30) + ')')