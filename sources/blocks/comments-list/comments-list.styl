.comments-list
  margin-bottom rem(30px)
  p
    &:last-child
      margin 0

  .collapsible__inner
    margin-top 1.5rem

  &__item
    padding rem(30px) 0
    & + &
      border-top 1px solid #dfdfdf

  &__header
    margin-bottom 0.7rem

  &__title
    font-size rem(16px)
    margin-bottom 0.2em

  &__date
    display inline
    color #9e9e9e
    font-size 14px

  @media (min-width $screen-sm-min)
    &__title
      display inline

    &__date
      margin-left 1.3em