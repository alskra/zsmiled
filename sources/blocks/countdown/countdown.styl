.countdown
  display flex
  margin 0 rem(-10px) rem(65px)

  &__item
    display flex
    flex-direction column
    flex none
    justify-content center
    align-items center
    white-space nowrap
    width rem(114px)
    height rem(114px)
    border-radius 50%
    pointer-events none
    position relative
    margin 0 rem(10px)

  &__svg
    width 100%
    height 100%
    pointer-events none
    position absolute
    top 0
    left 0
    transform rotate(-90deg)

  &__fill
    stroke-dashoffset 0
    stroke white
    stroke-width 3px

  &__bar
    stroke-dashoffset 0
    stroke $blue-1
    stroke-width 3px
    transition stroke-dashoffset 0.15s linear

  &__digit
    display block
    font-size rem(30px)
    line-height 1em
    color $black-1
    margin-bottom rem(2px)