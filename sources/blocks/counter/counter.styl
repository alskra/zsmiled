.counter
  display inline-flex
  vertical-align top
  margin-bottom 10px

  &__btn
    flex none
    color $gray-1
    font-size 16px
    line-height 1em
    square 38px
    background-color white
    border 1px solid #e5e5e5
    &:hover, &:focus
      color $green-1
      border-color $green-1

    &_dec
      border-radius 2px 0 0 2px

    &_inc
      border-radius 0 2px 2px 0

  &__input
    overflow hidden
    color $brown-1
    font-size 15px
    line-height 36px
    text-align center
    width 43px
    padding 0 5px
    background-color #f9f9f9
    border 0
    border-top 1px solid #e5e5e5
    border-bottom 1px solid #e5e5e5