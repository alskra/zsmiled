.form-label
  display block
  position relative
  .text-field
    display block
    width 100%

  &__text
    text-align left
    color #9e9e9e
    text-overflow ellipsis
    line-height rem(65px)
    transition $transition-base
    pointer-events none
    position absolute
    top 0
    right unquote('calc(' + rem(18px) + ' + 2px)')
    left unquote('calc(' + rem(18px) + ' + 2px)')
