.form-subscribe
  width 214px
  text-align center
  margin 0 auto

  &__inner
    border-bottom 1px solid

  &__icon
    display inline-block
    vertical-align top
    font-size 10px
    line-height 35px
    margin-right 6px

  &__field
    display inline-block
    vertical-align top
    font-size 12px
    line-height 35px
    width 110px
    padding 0
    background none
    border 0
    &::placeholder
      color inherit

  &__btn
    display inline-block
    vertical-align top
    font-size 11px
    line-height 35px
    width 25px
    margin-left 2px

  &__label
    font-size 10px
    margin-top 5px