.gallery-slider
  margin 0 -20px 35px
  &__view
    overflow hidden
    background-color white
    border 1px solid #ececec
    .slick-arrow
      square 51px
      background-color white
      border 1px solid #ececec
      position absolute
      top 50%
      margin -25px 0
      font-size 10px
      line-height 1em
      padding-top 1px
      color #989898
      z-index 10
      transition 0.15s
      &:hover, &:focus
        border-color #333
        background #333
        color #fff
    .slick-prev
      left -1px
      transform rotate(180deg)
    .slick-next
      right -1px
  &__view-item
    position relative
    padding-top percentage(443/323)
  &__view-img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &__thumb
    position relative
    overflow hidden
  &__thumb-inner
    overflow hidden
    height 100%
    .slick-list
      margin -10px 0
      position absolute
      top 0
      left 0
      width 100%
    .slick-slide
      margin 10px 0
      position relative
      cursor pointer
      background-color #f3f3f3
      border 1px solid #ececec
      width 100% !important
      &.loading
        &:before
          width 20px
          height 20px
          border-width 2px
          margin -10px
      &.slick-current
        img
          opacity 0.3 !important
  &__thumb-item
    position relative
    height 100%
  &__thumb-img
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    transition opacity 0.15s

  @media (min-width $screen-sm-min)
    margin 0 0 30px
    &__view-item
      padding-top percentage(1)

  @media (min-width $screen-md-min)
    display flex
    justify-content space-between
    &__view
      width unquote('calc(' + percentage(600/715) + ')')
      order 1
    &__thumb
      width unquote('calc(' + percentage(115/715) + ' - 20px)')
