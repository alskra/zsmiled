.link
  &_type
    &_1
      color #878594
      font-size 14px
      font-weight 700
      text-transform uppercase
      text-decoration none !important
      &:hover, &:focus
        color $blue-1
  &_to-top
    color #878594
    font-size 14px
    font-weight 700
    line-height 1em
    text-transform uppercase
    text-decoration none !important
    position absolute
    margin -0.5em -42px
    transform rotate(-90deg)
    top 50%
    right percentage(102/$screen-sm-min/2)
    z-index $zindex-navbar-fixed
    transition visibility 0s, opacity 0.15s
    .fa
      font-size 24px
      color $blue-1
      margin-left 15px
      vertical-align top
      overflow hidden
      transform scaleX(1.3)
      transition inherit
    &:hover, &:focus
      color white

  @media (min-width $screen-md-min)
    &_to-top
      right calc((100vw - 1170px)/4)