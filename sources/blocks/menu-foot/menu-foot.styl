.menu-foot
  column-count 2
  column-gap 20px
  color #474747
  font-size 14px
  line-height (18/14)em
  max-width 320px
  margin 0 auto -15px

  &__item
    padding-bottom 15px
    page-break-inside avoid

  &__btn
    color inherit
    text-decoration none
    &:hover, &:focus
      color $green-1
      text-decoration none

  @media (min-width 541px)
    max-width none
    margin-left 0
    margin-right 0