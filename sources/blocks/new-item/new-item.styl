.new-item
  p
    display inline
  &:hover, &:focus
    & {r}__viewers
      background $blue-1
    & {r}__title
      color $blue-1
    & {r}__more
      color $blue-1
      .glyphicon
        color $blue-1

  &__inner
    display block
    overflow hidden
    color inherit
    text-decoration none
    &:hover, &:focus
      color inherit
      text-decoration none

  &__img-wrap
    overflow hidden
    padding-top percentage(295/295)
    position relative
    margin-bottom rem(23px)

  &__img
    position absolute
    top 0
    left 0

  &__viewers
    square rem(64px)
    color white
    font-size rem(13px)
    line-height rem(64px)
    text-align center
    background $text-color
    transition $transition-base
    position absolute
    top 0
    right 0
    z-index 1
    &:before
      font-size rem(37px)
      line-height rem(63px)
    &:after
      content attr(data-val)
      position absolute
      top 0
      right 0
      bottom 0
      left 0

  &__content
    background white

  &__header
    margin-bottom rem(20px)
    &:after
      content ''
      display block
      size rem(45px) rem(3px)
      background-color $blue-1
      margin rem(13px) auto 0 0

  &__title
    overflow hidden
    color #2c2c2c
    font-size rem(18px)
    text-transform uppercase
    line-height 1.25em
    max-height 1.25em*2
    line-clamp 2
    margin 0 0 0.4em
    transition $transition-base

  &__date
    display block
    color #9e9e9e
    font-size rem(14px)
    text-transform uppercase

  &__description
    overflow hidden
    line-height ($line-height-base)em
    max-height ($line-height-base)em*4
    line-clamp 4
    margin-bottom rem(15px)

  &__more
    color #2c2c2c
    font-weight 900
    font-size rem(14px)
    line-height 1em
    text-transform uppercase
    transition $transition-base
    .glyphicon
      color #9e9e9e
      font-size rem(10px)
      transition inherit
      margin-left rem(10px)
      &:before
        display inline
        vertical-align baseline

  @media (min-width $screen-sm-min)
    &__inner
      display flex
      height rem(295px)

    &__img-wrap
      flex 0 0 percentage(295/610)
      padding-top percentage(295/610)
      margin 0
      order 1

    &__content
      flex 0 0 percentage((610 - 295)/610)
      padding rem(25px)
      border 1px solid #dfdfdf