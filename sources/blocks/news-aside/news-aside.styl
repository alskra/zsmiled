.news-aside {
  margin 0 0 rem(20)
  p {
    display inline
  }

  &__title-sect {
    margin 0 0 rem(12)
  }

  &__item {
    margin 0 0 rem(12)
  }

  &__title {
    color #4c301c
    font-size rem(14)
    font-weight 400
    margin 0 0 rem(5)
  }

  &__description {
    overflow hidden
    color #4d4d4d
    font-size rem(10)
    line-height 1.25em
    font-style italic
    max-height 1.25em*4
    line-clamp(4)
    margin 0 0 rem(5)
  }

  &__read-more {
    color #1d96da
    font-size rem(10)
    &:hover, &:focus {
      color $link-hover-color
    }
  }
}