.personnel-item
  text-align center
  color #9e9e9e
  p
    display inline

  &__img-wrap
    display block
    overflow hidden
    padding-top percentage(295/295)
    position relative
    margin-bottom rem(26px)
    &:before
      display flex
      justify-content center
      align-items center
      color white
      font-size rem(37px)
      line-height 1em
      background rgba($blue-1, 0.9)
      transition $transition-base
      opacity 0
      position absolute
      top rem(20px)
      right rem(20px)
      bottom rem(20px)
      left rem(20px)
      z-index 1
    &:hover, &:focus
      &:before
        opacity 1
      &~{r}__title {r}__title-link
        color $blue-1

  &__img
    position absolute
    top 0
    left 0

  &__title
    overflow hidden
    color #2c2c2c
    font-weight 900
    font-size rem(20px)
    line-height 1.25em
    text-transform uppercase
    max-height 1.25em*2
    line-clamp 2
    margin 0 0 0.5em

  &__title-link
    display block
    color inherit
    text-decoration none
    &:hover, &:focus
      color $blue-1
      text-decoration none

  &__description
    overflow hidden
    line-height ($line-height-base)em
    max-height ($line-height-base)em*3
    line-clamp 3