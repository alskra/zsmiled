.photo-item
  display block
  overflow hidden
  padding-top percentage(295/295)
  position relative
  cursor pointer
  &:hover, &:focus
    & {r}__caption
      opacity 1
  p
    display inline

  &__img
    position absolute
    top 0
    left 0

  &__caption
    display flex
    flex-flow column
    justify-content center
    text-align center
    color white
    text-transform uppercase
    background rgba($blue-1, 0.9)
    transition $transition-base
    padding rem(10px) rem(10px) rem(20px)
    opacity 0
    position absolute
    top rem(20px)
    right rem(20px)
    bottom rem(20px)
    left rem(20px)
    z-index 1
    &:before
      display block
      font-size rem(37px)
      line-height 1em
      margin 0 auto percentage(30px/235px)

  &__title
    flex none
    overflow hidden
    font-weight 700
    font-size rem(18px)
    line-height 1.25em
    max-height 1.25em*2
    line-clamp 2
    margin 0 0 0.2em

  &__date
    flex none
    display block
    overflow hidden
    text-overflow ellipsis
    font-size 13px