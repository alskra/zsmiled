.rating {
  display inline-flex
  color #1d95da
  font-size rem(17)
  line-height 1em
  margin 0 rem(-1)

  &__item {
    flex none
    width rem(18)
    height rem(17)
    margin 0 rem(1)
  }

  &__svg {
    width 100%
    height 100%
    fill currentColor
  }

  &_value_1 {
    &  {r}__item:nth-child(1) ~ {r}__item {
      & {r}__svg {
        fill transparent
      }
    }
  }

  &_value_2 {
    &  {r}__item:nth-child(2) ~ {r}__item {
      & {r}__svg {
        fill transparent
      }
    }
  }

  &_value_3 {
    &  {r}__item:nth-child(3) ~ {r}__item {
      & {r}__svg {
        fill transparent
      }
    }
  }

  &_value_4 {
    &  {r}__item:nth-child(4) ~ {r}__item {
      & {r}__svg {
        fill transparent
      }
    }
  }

  &_value_5 {
    &  {r}__item:nth-child(5) ~ {r}__item {
      & {r}__svg {
        fill transparent
      }
    }
  }
}