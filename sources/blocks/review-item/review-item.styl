.review-item {
  p {
    &:last-child {
      margin 0
    }
  }

  & + & {
    margin-top rem(20)
    border-top 2px solid #cacaca
    padding-top rem(20)
  }

  &__col-1 {
    display block
    overflow hidden
    max-width rem(164)
    margin 0 auto rem(15)
    &:hover, &:focus {
      & ~ {r}__content {r}__title-link {
        color $blue-1
      }
    }
  }

  &__img {
    width 100%
  }

  &__col-2 {

  }

  &__header {
    color $blue-2
    text-align center
    margin 0 0 rem(12)
  }

  &__title {
    color $blue-2
    font-size rem(16)
    font-weight 700
    text-transform uppercase
    margin 0 0 rem(2)
  }

  &__location {
    margin 0 0 rem(5)
  }

  @media (min-width $screen-sm-min) {
    display flex

    &__col-1 {
      flex none
      width rem(164)
      margin 0 rem(30) 0 0
    }

    &__col-2 {
      flex 1 1 auto
    }

    &__header {
      text-align left
    }
  }
}