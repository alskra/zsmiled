.section-instagram
  padding 30px 15px
  margin 0 -10px 20px
  background-color #f5f3f3

  &__header
    margin-bottom 28px

  &__title
    color $green-2
    font-size rem-calc(24)
    font-weight 400
    line-height 1.25em
    margin 0

  &__title-icon
    display inline-block
    vertical-align top
    color $text-color
    font-size rem-calc(30)
    margin-right rem-calc(9)

  &__title-link
    color inherit

  &__photo-list
    max-width 150px*2 + 20px
    margin 0 auto

  &__photo-list-inner
    display flex
    flex-flow row wrap
    align-items flex-start
    margin 0 -10px

  &__photo-item
    flex none
    overflow hidden
    width calc(50% - 20px)
    margin 0 10px 20px
    background-color white
    border 1px solid #b3b3b3
    border-radius 2px

  &__photo-img
    display block
    width 100%

  @media (min-width 480px)
    &__photo-list
      max-width 150px*3 + 20px*2

    &__photo-item
      width calc(100%/3 - 20px)

  @media (min-width 640px)
    &__photo-list
      max-width 150px*4 + 20px*3

    &__photo-item
      width calc(100%/4 - 20px)

  @media (min-width $screen-sm-min)
    padding-left 45px
    padding-right 45px

    &__photo-list
      max-width 150px*5 + 20px*4

    &__photo-item
      width calc(100%/5 - 20px)

  @media (min-width $screen-md-min)
    margin-left 0
    margin-right 0