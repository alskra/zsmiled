.select
  display inline-block
  vertical-align top
  .text-field
    display flex
    padding-right 0
    position relative
    cursor pointer
    &:after
      flex none
      width 22px
      content '\e93a'
      font-family 'fontello'
      font-size 15px
      color #747474
      text-align center
      margin 1px 0 0
    &.ik_select_link_focus
      z-index auto
  .ik_select_link_text
    flex 1 1 auto
    text-overflow ellipsis
  .select-dd
    .ik_select_list
      overflow hidden
      border 1px solid #e5e5e5
      margin-top -1px
      background-color white
      border-radius 0 0 2px 2px
    ul
      list-style none
      margin 0
      padding 0
    li
      font-size 13px
      line-height 1em
      font-weight 400
      color $text-color
      padding 6px 10px 7px
      margin 0
      cursor pointer
      transition $transition-base
      &:before
        content normal
      &.ik_select_hover
        color $brown-1
    .ik_select_option_label
      display block
      text-overflow ellipsis

  &__dd
    .ik_select_list
      overflow hidden
      border 1px solid #e5e5e5
      margin-top 0
      background-color white
      border-radius 0 0 2px 2px
    ul
      list-style none
      margin 0
      padding 0
    li
      font-size 13px
      line-height 1em
      font-weight 400
      color $text-color
      padding 6px 10px 7px
      margin 0
      cursor pointer
      transition $transition-base
      &:before
        content normal
      &.ik_select_hover
        color $brown-1
    .ik_select_option_label
      display block
      text-overflow ellipsis

  &_width_100
    display block
    width 100%