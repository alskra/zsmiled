.set-display
  display flex
  flex-flow row wrap
  color $gray-1
  font-size 14px
  line-height 1.25em
  padding 10px 12px
  margin-bottom 20px
  background-color #f1f1f1

  .form-label
    display flex
    align-items baseline

  .form-label__text
    flex none
    width 100px
    font-size inherit
    margin 0 10px 4px 0

  .select
    flex 1 1 auto
    overflow hidden

  &__col

    &_1
      flex none
      width 100%
      margin-bottom 10px

    &_2
      flex 1 1 auto
      overflow hidden

    &_3
      flex none
      margin-left 11px

  &__view
    color #747474
    font-size 14px
    line-height 1em
    width 26px
    height 26px
    margin-left 3px
    &:hover, &:focus, &_active
      color $brown-1

  @media (min-width $screen-sm-min)
    .form-label__text
      width auto

    &__col
      flex none

      &_1
        width auto
        margin-bottom 0

      &_2
        margin-left auto
