.showcase-new-1
  display block
  overflow hidden
  float left
  text-decoration none
  width 50%
  &:hover, &:focus
    text-decoration none

  &__col
    float left
    width 50%
    padding-top percentage(512/512)
    position relative

    &_2
      &:before
        content ''
        border-top 66px solid transparent
        border-bottom 66px solid transparent
        border-right 61px solid #2a2a2a
        position absolute
        top 50%
        right 100%
        z-index 1
        margin -66px 0
      & {r}__content
        background #2a2a2a
        padding 50px 35px
      & {r}__text
        overflow hidden
        color #c5c5c5
        font-size 14px
        font-weight 100
        line-height (24/14)em
        max-height (24/14)em*15

  &__img
    position absolute
    top 0
    left 0

  &__content
    padding 36px
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__section
    display inline-block
    vertical-align top
    color #c5c5c5
    font-size 10px
    line-height 1em
    font-weight 500
    text-transform uppercase
    margin 0 0 30px 5px
    &:after
      content ''
      display block
      size 21px 1px
      border-bottom 1px solid #e98832
      margin 8px auto 0

  &__title
    color white
    font-size 24px
    font-weight 400
    line-height 1.25em
    height 100%
    padding 20px 75px
    position relative
    margin 0
    background-color rgba(#010d16, 0.75)
    &:before
      content ''
      display inline-block
      vertical-align middle
      height 100%

  &__title-fix
    display inline-block
    vertical-align middle
    overflow hidden
    width 100%
    max-height calc(1.25em*3 + 4px)
    padding-bottom 4px