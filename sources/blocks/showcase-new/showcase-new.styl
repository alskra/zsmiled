.showcase-new
  display block
  overflow hidden
  text-decoration none
  &:hover, &:focus
    text-decoration none

  &__col
    float left
    width 50%
    padding-top percentage(258/1024)
    position relative

    &_1
      &:before
        content ''
        border-top 86px solid transparent
        border-bottom 86px solid transparent
        border-left 68px solid white
        position absolute
        top 50%
        left 100%
        z-index 1
        margin -86px 0
      & {r}__content
        background white
        padding 50px 55px
      & {r}__text
        overflow hidden
        color #353535
        font-size 14px
        font-weight 500
        line-height (24/14)em
        max-height (24/14)em*5

  &__img
    position absolute
    top 0
    left 0

  &__content
    padding 36px
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__section
    display inline-block
    vertical-align top
    color black
    font-size 10px
    line-height 1em
    font-weight 500
    text-transform uppercase
    margin 0 0 12px 5px
    &:after
      content ''
      display block
      size 21px 1px
      border-bottom 1px solid #e98832
      margin 8px auto 0

  &__title
    color white
    font-size 24px
    font-weight 400
    line-height 1.25em
    height 100%
    padding 20px 75px
    position relative
    margin 0
    background-color rgba(#010d16, 0.75)
    &:before
      content ''
      display inline-block
      vertical-align middle
      height 100%

  &__title-fix
    display inline-block
    vertical-align middle
    overflow hidden
    width 100%
    max-height calc(1.25em*3 + 4px)
    padding-bottom 4px