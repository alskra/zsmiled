.showcase
  display block
  float left
  overflow hidden
  color white
  text-decoration none
  width 50%
  padding-top 50%
  position relative
  &:hover, &:focus
    color white
    text-decoration none

  &__img
    position absolute
    top 0
    left 0

  &__content
    padding 50px 35px
    position absolute
    top 0
    left 0
    width 100%
    height 100%

  &__section
    display inline-block
    vertical-align top
    font-size 10px
    line-height 1em
    font-weight 500
    text-transform uppercase
    margin 0 0 10px 10px
    &:after
      content ''
      display block
      size 21px 1px
      border-bottom 1px solid black
      margin 8px auto 0

  &__title
    overflow hidden
    color inherit
    font-family KazimirText, sans-serif
    font-style italic
    font-size 36px
    font-weight 400
    line-height 1.25em
    max-height calc(1.25em*5 + 4px)
    padding-bottom 4px
    margin 0 0 27px
    text-shadow 1px 1.7px 2px rgba(42, 42, 42, 0.75)