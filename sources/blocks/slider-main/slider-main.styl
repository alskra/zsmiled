.slider-main {
  overflow hidden
  height rem(400)
  margin 0 (- ($grid-gutter-width/2)) rem(30)
  p {
    &:last-child {
      margin 0
    }
  }
  .slick-list, .slick-track, .slick-slide {
    height 100%
  }
  .slick-prev, .slick-next {
    width rem(40)
    height rem(40)
    font-size rem(20)
    line-height 1em
    padding 0
    background rgba(#cbcbcb, 0.5)
    border-radius 50%
    position absolute
    top 50%
    z-index 10
    margin rem(-20) 0
  }
  .slick-prev {
    padding-right rem(3)
    left rem(10)
  }
  .slick-next {
    padding-left rem(3)
    right rem(10)
  }

  &__item {
    position relative
  }

  &__img {
    position absolute
    top 0
    left 0
  }

  &__content {
    padding rem(45) rem(30)
    opacity 1
    transition 0.2s linear
    position relative
    .loading & {
      opacity 0
    }
  }

  &__title {
    color #134273
    font-family 'Plumb', sans-serif
    font-size rem(37)
    font-weight 700
    line-height 1.25em
    text-transform uppercase
    position relative
    margin 0 0 rem(15)
    &:before {
      content attr(data-text)
      color transparent
      text-shadow 0 0 10px #fefefc, 0 0 20px #fefefc, 0 0 30px #fefefc, 0 0 40px #fefefc, 0 0 50px #fefefc, 0 0 60px #fefefc, 0 0 70px #fefefc, 0 0 80px #fefefc, 0 0 90px #fefefc, 0 0 100px #fefefc
      position absolute
      top 0
      right 0
      bottom 0
      left 0
    }
    &:after {
      content attr(data-text)
      display block
      overflow hidden
      max-height 1.25em*4
      line-clamp 4
      position relative
    }
  }

  &__btn {
    position relative
    z-index 1
  }

  @media (min-width $screen-sm-min) {

  }

  @media (min-width $screen-md-min) {
    height rem(577)
    margin-left 0
    margin-right 0
    .slick-prev, .slick-next {
      width rem(60)
      height rem(60)
      font-size rem(30)
      margin rem(-30) 0
    }
    .slick-prev {
      left rem(20)
    }
    .slick-next {
      right rem(20)
    }

    &__content {
      text-align right
      margin-left 50%
    }
  }

  @media (min-width $screen-lg-min) {
    &__content {
      margin-left 63%
    }
  }
}