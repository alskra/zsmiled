.slider-product-card
  max-width 320px
  margin 0 auto 30px
  .slick-slide
    position relative
  &__main
    overflow hidden
    background-color white
    border 1px solid #d4d4d4
    border-radius 2px
    margin-bottom 20px
    position relative
    &:before
      content attr(data-article)
      position absolute
      top 8px
      right 10px
      z-index 10
      color $gray-1
      font-size 13px
      text-align right
      width calc(100% - 20px)
      line-height 1em

  &__main-item
    overflow hidden
    padding-top percentage(288/334)
    position relative

  &__main-img
    position absolute
    top 0
    left 0

  &__thumbs
    overflow hidden
    opacity 0
    .slick-list
      margin 0 -10px
    .slick-slide
      margin 0 10px

  &__thumb-item
    overflow hidden
    padding-top 86.2%
    position relative
    background-color white
    border 1px solid #d4d4d4
    border-radius 2px
    cursor pointer
    transition border-color $transition-duration-base
    &:hover, &:focus, .slick-current &
      border-color $green-1

  &__thumb-img
    position absolute
    top 0
    left 0

  @media (min-width $screen-sm-min)
    max-width none
    position relative

    &__main
      margin 0 0 0 117px

    &__thumbs
      width 97px
      height 100%
      position absolute
      top 0
      left 0
      .slick-list
        height auto !important
        position absolute
        top -10px
        left 0
        right 0
        bottom -10px
        margin 0
      .slick-slide
        margin 10px 0
        border 0

    &__thumb-item
      padding 0

  @media (min-width $screen-md-min)
    margin-bottom 40px