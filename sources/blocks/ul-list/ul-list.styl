.ul-list
  list-style none
  padding 0
  line-height ($line-height-base)em
  >li
    position relative
    padding-left 20px
    &:before
      content '\2022'
      font-weight 400
      position absolute
      left 0
      color $red-1
  &_marker
    &_mdash
      >li
        &:before
          content '\2014'
    &_circle
      >li
        &:before
          content ''
          color $red-1
          border 4px solid
          border-radius 50%
          top ($line-height-base/2)em
          margin -4px 0
