.upload-file
  display inline-flex
  vertical-align top
  align-items center
  cursor pointer
  max-width 100%
  &__field
    clip rect(0, 0, 0, 0)
    position absolute
    width 0
    height 0
  &__btn
    flex none
    display flex
    justify-content center
    align-items center
    square 62px
    border-radius 50%
    background inline-image('attach.svg') no-repeat 50%/22px auto #6587a8
    &_preview
      background inline-image('plus.svg') no-repeat 50%/16px 16px $blue-1
  &__src
    flex 1 1 auto
    line-height 50px
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
  &_has-value
    & {$p}__src
      margin-left 10px
