.write-item
  padding rem(30)
  background white
  border 2px solid #ccd2d7
  p
    &:last-child
      margin 0

  &__header
    display flex
    align-items flex-start
    margin-bottom 1.25rem

  &__icon
    flex none
    width rem(50)
    height rem(50)
    border-radius 50%
    margin-right ($grid-gutter-width/2)
    background inline-svg('write-item-icon.svg') no-repeat 50% 50%/contain

  &__title
    overflow hidden
    flex 1 1 auto
    align-self center
    color $red-1
    font-size rem(23px)
    font-weight 700
    margin 0

  &__footer
    text-align center
    margin-top rem(30px)

  &_small
    min-height 100%
    & {r}__title
      font-size rem(20)


